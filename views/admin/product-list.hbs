<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>

    <main>
        <h1>My Products</h1>
        {{#if hasProducts}}
          <div class="grid">
                {{#each prods}}
                    <article class="item product-item">
                        <header class="item__header">
                            <h1 class="product__title">{{this.title}}</h1>
                        </header>
                        <div class="item__image">
                            <img src="{{this.imageUrl}}" alt="A Book">
                        </div>
                        
                        <div class="item__content">
                            <h2 class="product__price">${{this.price}}</h2>
                            <p class="product__description">{{this.description}}</p>
                        </div>
                      
                        <div class="item__actions">
                        <a href="/admin/edit-product/{{this._id}}?edit=true" class="btn">Edit</a>

                        <form action="/admin/delete-product" method="POST">
                                <input type="hidden" name="productID" id="" value="{{this._id}}">
                                <button class="btn" type="submit">Delete</button>
                        </form>
                         
                         
                        </div>

                    </article>
                {{/each}}
</div>
        {{else}}
            <h1>No Products Found!</h1>
        {{/if}}
    </main>
</body>

</html>